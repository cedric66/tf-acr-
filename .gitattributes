# Enforce Unix line endings (LF) for shell scripts
*.sh text eol=lf

# Python files
*.py text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# JSON files
*.json text eol=lf

# Terraform files
*.tf text eol=lf
*.tfvars text eol=lf

# Go files
*.go text eol=lf

# Config files
.env text eol=lf
.env.* text eol=lf
*.env text eol=lf
*.conf text eol=lf
*.config text eol=lf
