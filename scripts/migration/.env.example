# .env.example - Environment variables for AKS Spot Migration scripts
# Copy this to .env and modify as needed.

# ── Cluster Identity ────────────────────────────────────────────────────────
# The name of the AKS cluster
CLUSTER_NAME=aks-spot-prod

# The resource group containing the AKS cluster
RESOURCE_GROUP=rg-aks-spot

# The Azure region where the cluster is located
LOCATION=australiaeast

# ── VM SKU Selection ────────────────────────────────────────────────────────
# Choose SKUs that are available in your region and have good spot availability.
# E-series (memory-optimized) often have lower eviction rates.

# Memory-optimized pools
POOL_VM_SIZE_spotmemory1=Standard_E4s_v5
POOL_VM_SIZE_spotmemory2=Standard_E8s_v5

# General-purpose pools
POOL_VM_SIZE_spotgeneral1=Standard_D4s_v5
POOL_VM_SIZE_spotgeneral2=Standard_D8s_v5

# Compute-optimized pools
POOL_VM_SIZE_spotcompute=Standard_F8s_v2

# ── Pool Sizing ─────────────────────────────────────────────────────────────
# Maximum number of nodes for each pool
POOL_MAX_spotmemory1=15
POOL_MAX_spotmemory2=10
POOL_MAX_spotgeneral1=20
POOL_MAX_spotgeneral2=15
POOL_MAX_spotcompute=10

# ── Availability Zones ──────────────────────────────────────────────────────
# Distribute pools across zones to minimize correlated eviction risk.
POOL_ZONES_spotmemory1=1
POOL_ZONES_spotmemory2=2
POOL_ZONES_spotgeneral1=1
POOL_ZONES_spotgeneral2=2
POOL_ZONES_spotcompute=3

# ── Kubernetes Configuration ───────────────────────────────────────────────
# Default namespace for audit scripts
K8S_NAMESPACE=default
